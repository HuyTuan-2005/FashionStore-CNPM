@model FashionStore.Models.Product

@{
    ViewBag.Title = "Chỉnh sửa hình ảnh";
}

<!-- Breadcrumb -->
<div class="breadcrumb">
    <a href="@Url.Action("Index", "Dashboard")">Dashboard</a>
    <span class="breadcrumb-separator">/</span>
    <a href="@Url.Action("Index", "Product")">Sản phẩm</a>
    <span class="breadcrumb-separator">/</span>
    <a href="@Url.Action("Edit", "Product", new { id = Model.ProductID })">Sửa sản phẩm</a>
    <span class="breadcrumb-separator">/</span>
    <span>Quản lý hình ảnh</span>
</div>

<!-- Content -->
<div class="content-area">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-6">
        <div class="d-flex align-items-center gap-4">
            <a href="@Url.Action("Edit", "Product", new { id = Model.ProductID })" class="btn btn-icon btn-outline">
                <svg style="width: 20px; height: 20px;" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                     stroke-width="2">
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
            </a>
            <div>
                <h1>Quản lý hình ảnh: <span>@Model.ProductName</span></h1>
                <p class="text-muted mt-1">Cập nhật ảnh chính và ảnh phụ</p>
            </div>
        </div>
    </div>

    @using (Html.BeginForm("EditImages", "Product", FormMethod.Post, new { enctype = "multipart/form-data", id = "imageForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("id", Model.ProductID)

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
            <!-- Ảnh chính -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Ảnh chính</h3>
                </div>
                <div class="card-content">
                    <!-- Preview ảnh hiện tại -->
                    <div class="form-group m-0">
                        <label class="form-label">Ảnh hiện tại</label>
                        <div
                            style="border: 2px dashed var(--border); border-radius: var(--radius); padding: 0.7rem; text-align: center; cursor: pointer;"
                            onclick="document.getElementById('mainImage').click()">
                            <input type="file" id="mainImage" name="mainImage" accept="image/*" style="display: none;"
                                   onchange="previewImage(this, 'mainImagePreview')">
                            <div id="mainImagePreview" class="d-flex flex-column align-items-center justify-content-center">
                                @{
                                    var mainImage = Model.ProductImages.FirstOrDefault(x => x.IsPrimary != null && x.IsPrimary.Value);
                                }
                                @if (mainImage != null)
                                {
                                    <img alt="Ảnh chính"
                                        src="@Url.Content("~/Content/img/products/" + Model.ProductImages.FirstOrDefault(x => x.IsPrimary != null && x.IsPrimary.Value)?.ImageUrl)"
                                        style="width: 100%; border-radius: var(--radius);">
                                    <p class="text-muted mt-2" style="font-size: 12px;">@mainImage.ImageUrl</p>
                                }
                                else
                                {
                                    <svg
                                        style="width: 48px; height: 48px; color: var(--muted-foreground); margin: 0 auto 1rem;"
                                        viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                        <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                        <polyline points="21 15 16 10 5 21"></polyline>
                                    </svg>
                                    <p>Click để tải ảnh lên</p>
                                    <p class="text-muted" style="font-size: 12px;">PNG, JPG hoặc WEBP (tối đa 5MB)</p>
                                }
                            </div>
                        </div>

                    </div>


                </div>
            </div>

            <!-- Ảnh phụ -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Ảnh phụ</h3>
                </div>
                <div class="card-content">
                    <!-- Danh sách ảnh phụ hiện có -->
                    <div class="form-group">
                        <label class="form-label">Ảnh hiện có (@Model.ProductImages.Count(x => x.IsPrimary == false)/4
                            ảnh)</label>
                        <div id="existingAdditionalImages"
                             style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.75rem;">
                            @foreach (var img in Model.ProductImages.Where(x => x.IsPrimary == false))
                            {
                                <div
                                    style="position: relative; border: 1px solid var(--border); border-radius: var(--radius); overflow: hidden;">
                                    <img src="@Url.Content("~/Content/img/products/" + img.ImageUrl)"
                                         alt="Ảnh phụ"
                                         style="width: 100%; height: 150px; object-fit: cover;">
                                    <button type="button"
                                            class="btn btn-danger"
                                            style="position: absolute; top: 4px; right: 4px; padding: 0.25rem 0.5rem; font-size: 11px;"
                                            onclick="removeImage(@img.ProductID, '@img.ImageID')">
                                        Xóa
                                    </button>
                                </div>
                            }
                        </div>
                        @if (Model.ProductImages.Count(x => x.IsPrimary == false) == 0)
                        {
                            <p class="text-muted mt-2" style="font-size: 13px;">Chưa có ảnh phụ nào</p>
                        }
                    </div>

                    <!-- Upload ảnh phụ mới -->
                    @{
                        var remainingSlots = 4 - Model.ProductImages.Count(x => x.IsPrimary == false);
                    }
                    @if (remainingSlots > 0)
                    {
                        <div class="form-group">
                            <label class="form-label">Thêm ảnh phụ mới (còn @remainingSlots/@(4) slot)</label>
                            <div class="d-flex flex-column align-items-center justify-content-center"
                                style="border: 2px dashed var(--border); border-radius: var(--radius); padding: 1rem; text-align: center; cursor: pointer;"
                                onclick="document.getElementById('additionalImages').click()">
                                <input type="file"
                                       id="additionalImages"
                                       name="additionalImages"
                                       accept="image/*"
                                       multiple
                                       style="display: none;"
                                       onchange="previewMultipleImages(this, 'additionalImagesPreview', @remainingSlots)">
                                <div id="additionalImagesPreview">
                                    <svg
                                        style="width: 32px; height: 32px; color: var(--muted-foreground); margin: 0 auto 0.5rem;"
                                        viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="16 16 12 12 8 16"></polyline>
                                        <line x1="12" y1="12" x2="12" y2="21"></line>
                                        <path d="M20.39 18.39A5 5 0 0 0 18 9h-1.26A8 8 0 1 0 3 16.3"></path>
                                        <polyline points="16 16 12 12 8 16"></polyline>
                                    </svg>
                                    <p style="font-size: 12px;">Chọn tối đa @remainingSlots ảnh (PNG, JPG, WEBP)</p>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info"
                             style="margin-top: 1rem; padding: 0.75rem; background: #e3f2fd; border-radius: var(--radius);">
                            <p style="margin: 0; font-size: 13px;">Đã đạt giới hạn 4 ảnh phụ. Vui lòng xóa ảnh cũ để
                                thêm ảnh mới.</p>
                        </div>
                    }
                </div>

            </div>
        </div>

        <!-- Action buttons -->
        <div class="card-content p-0 mt-4">
            <div class="d-flex justify-content-end align-items-center gap-3">
                <a href="@Url.Action("Edit", "Product", new { id = Model.ProductID })" class="btn btn-outline">
                    Hủy
                </a>
                <button type="submit" class="btn btn-primary">
                    Cập nhật hình ảnh
                </button>
            </div>
        </div>
    }
</div>

@section forms
{
    @Html.BeginForm("DeleteImage", "Product", FormMethod.Post, new {@class="d-none", id = "deleteImageForm" })
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("productId", "")
        @Html.Hidden("imageId", "")
    }
}

@section Scripts {
    <script>
        function previewMultipleImages(input, previewId, maxAllowed) {
            const preview = document.getElementById(previewId);
            const files = input.files;

            // Validate số lượng file
            if (files.length > maxAllowed) {
                alert(`Chỉ được chọn tối đa ${maxAllowed} ảnh. Bạn đã chọn ${files.length} ảnh.`);
                input.value = ''; // Reset input
                preview.innerHTML = `<p class="text-muted" style="font-size: 12px;">Vui lòng chọn lại</p>`;
                return;
            }

            // Validate kích thước file (tối đa 5MB mỗi ảnh)
            const maxSize = 5 * 1024 * 1024; // 5MB
            for (let i = 0; i < files.length; i++) {
                if (files[i].size > maxSize) {
                    alert(`Ảnh "${files[i].name}" vượt quá 5MB. Vui lòng chọn ảnh khác.`);
                    input.value = '';
                    preview.innerHTML = `<p class="text-muted" style="font-size: 12px;">Vui lòng chọn lại</p>`;
                    return;
                }
            }

            // Preview ảnh (layout 2 cột)
            preview.innerHTML = '';
            preview.style.display = 'grid';
            preview.style.gridTemplateColumns = '1fr 1fr';
            preview.style.gap = '0.5rem';

            Array.from(files).forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const imgDiv = document.createElement('div');
                    imgDiv.style.border = '1px solid var(--border)';
                    imgDiv.style.borderRadius = 'var(--radius)';
                    imgDiv.style.overflow = 'hidden';
                    imgDiv.innerHTML = `<img src="${e.target.result}" 
                                     style="width: 100%; height: 120px; object-fit: cover;">
                                <p style="font-size: 11px; padding: 0.25rem; margin: 0; text-align: center; background: #f5f5f5;">${file.name}</p>`;
                    preview.appendChild(imgDiv);
                };
                reader.readAsDataURL(file);
            });
        }

        function removeImage(productId, imageId) {
            if (confirm(`Bạn có chắc muốn xóa ảnh này không?`)) {
                const form = document.getElementById('deleteImageForm');
                form.elements['productId'].value = productId;
                form.elements['imageId'].value = imageId;
                form.submit();
            }
        }
    </script>
}
