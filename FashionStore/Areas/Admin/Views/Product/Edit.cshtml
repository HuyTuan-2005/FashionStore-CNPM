@using FashionStore.Models
@model FashionStore.Models.Product

@{
    ViewBag.Title = "Chỉnh sửa sản phẩm";
}

@section styles
{
    <link rel="stylesheet" href="~/Content/css/Admin/product-add.css"/>
}

<!-- Breadcrumb -->
<div class="breadcrumb">
    <a href="@Url.Action("Index", "Dashboard")">Dashboard</a>
    <span class="breadcrumb-separator">/</span>
    <a href="@Url.Action("Index", "Product")">Sản phẩm</a>
    <span class="breadcrumb-separator">/</span>
    <span>Sửa sản phẩm</span>
</div>

<!-- Content -->
<div class="content-area">
    <div class="d-flex justify-content-between align-items-center mb-6">
        <div class="d-flex align-items-center gap-4">
            <a href="@Url.Action("Index", "Product")" class="btn btn-icon btn-outline">
                <svg fill="none" style="width: 20px; height: 20px;" viewBox="0 0 24 24" stroke="currentColor"
                     stroke-width="2">
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
            </a>
            <div>
                <h1>Sửa sản phẩm: <span>@Model.ProductName</span></h1>
                <p class="text-muted mt-1">Cập nhật thông tin sản phẩm</p>
            </div>
        </div>
        <button class="btn btn-danger" onclick="confirmDelete('@Model.ProductID', '@Model.ProductName', 'sản phẩm')">
            <svg style="width: 16px; height: 16px; margin-right: 0.5rem;" viewBox="0 0 24 24" fill="none"
                 stroke="currentColor" stroke-width="2">
                <polyline points="3 6 5 6 21 6"></polyline>
                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
            </svg>
            Xóa sản phẩm
        </button>
    </div>

    @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data", id = "productForm" }))
    {
        @Html.AntiForgeryToken()
        <div style="display: grid; grid-template-columns: 1fr; gap: 1.5rem;">
            <!-- Left Column - Same as Add but with values -->
            <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 1.5rem;">
                <!-- Left Column -->
                <div style="display: flex; flex-direction: column; gap: 1.5rem;">
                    <!-- Basic Info -->
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h3 class="card-title">Thông tin cơ bản</h3>
                            <div>Mã sản phẩm: <strong>#@Model.ProductID</strong></div>
                        </div>
                        <div class="card-content">
                            <div class="form-group">
                                <label class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                                <input type="text" name="ProductName" class="form-control" required=""
                                       placeholder="Nhập tên sản phẩm" value="@Model.ProductName">
                            </div>


                            <div class="form-group">
                                <label class="form-label">Mô tả chi tiết</label>
                                <textarea name="Description" class="form-control" rows="6"
                                          placeholder="Mô tả đầy đủ về sản phẩm, tính năng, thông số kỹ thuật...">@Model.Description</textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Pricing -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Giá &amp; Khuyến mãi</h3>
                        </div>
                        <div class="card-content">
                            <div class="grid grid-cols-2">
                                <div class="form-group">
                                    <label class="form-label">Giá bán <span class="text-danger">*</span></label>
                                    <input value="@Convert.ToInt32(Model.BasePrice)" placeholder="Nhập giá bán"
                                           type="number" name="BasePrice"
                                           class="form-control" required="" min="0">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">% Giảm giá</label>
                                    <input value="@Convert.ToInt16(Model.DiscountPercent)" type="number"
                                           name="DiscountPercent" class="form-control"
                                           placeholder="Nhập % giảm giá" min="0" max="100" step="1">
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Biến thể sản phẩm</h3>
                            <div class="text-muted" style="margin-top: 0.5rem;">Thêm các biến thể như size, màu sắc cho
                                sản
                                phẩm
                            </div>
                        </div>
                        <div class="card-content">
                            <div id="variantsContainer">
                                <div style="overflow-x:auto;">
                                    <table class="table">
                                        <thead>
                                        <tr>
                                            <th>Màu sắc</th>
                                            <th>Size</th>
                                            <th>SKU</th>
                                            <th>Tồn kho</th>
                                            <th>Trạng thái</th>
                                            <th></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        @{
                                            int index = 0;
                                            foreach (var v in Model.ProductVariants)
                                            {
                                                <tr>
                                                    <td>
                                                        <label title="@v.Color.ColorName">
                                                            <span class="swatch" style="background: @v.Color.HexCode">
                                                                <input name="Variants[@index].ColorID" value="@v.ColorID" type="hidden">
                                                            </span>
                                                        </label>
                                                    </td>
                                                    <td><strong>@v.Size.SizeName</strong>
                                                        <input name="Variants[@index].SizeID" value="@v.Size.SizeName"
                                                               type="hidden"></td>
                                                    <td>
                                                        <input name="Variants[@index].SKU" type="text" class="form-control"
                                                               value="@v.SKU"
                                                               onchange="updateVariantField(0, 'sku', this.value)"
                                                               placeholder="Auto"
                                                               style="max-width: 150px">
                                                    </td>
                                                    <td>
                                                        <input name="Variants[@index].Stock" type="number"
                                                               class="form-control"
                                                               value="@v.Stock" min="0"
                                                               onchange="updateVariantField(0, 'stock', this.value)"
                                                               placeholder="0" style="width:100px;">
                                                    </td>
                                                    <td>
                                                        
                                                        <select class="form-control" name="Variants[@index].Status" onchange="updateVariantField(@index, 'status', this.value)">
                                                            <option value="Available" @(v.Status == "Available" ? "selected" : "")>Còn hàng</option>
                                                            <option value="OutOfStock" @(v.Status == "OutOfStock" ? "selected" : "")>Hết hàng</option>
                                                        </select>
                                                    </td>
                                                    <td>
                                                        
                                                        <input type="hidden" name="Variants[@index].VariantID" value="@v.VariantID"/>
                                                    </td>
                                                </tr>
                                                index++;
                                            }
                                        }


                                        </tbody>
                                    </table>
                                </div>
                                <div
                                    style="margin-top:1rem; padding:1rem; background:var(--muted); border-radius:var(--radius);">
                                    <p style="font-size:12px; color:var(--muted-foreground);">
                                        <strong>Tổng: @Model.ProductVariants.Count biến thể</strong><br>
                                        SKU sẽ tự động tạo nếu để trống. Giá để trống sẽ dùng giá chung của sản phẩm.
                                    </p>
                                </div>
                            </div>

                        </div>
                    </div>
                    @* <div class="card"> *@
                    @*     <div class="card-header"> *@
                    @*         <h3 class="card-title">Ngày tạo</h3> *@
                    @*     </div> *@
                    @*     <div class="card-content"> *@
                    @*         <div class="grid grid-cols-1"> *@
                    @*             <div class="form-group"> *@
                    @*                 <label class="form-label">Ngày và giờ tạo</label> *@
                    @*                 <input disabled="disabled" value="@Model.CreatedAt" type="text" name="Stock" class="form-control"> *@
                    @*             </div> *@
                    @* *@
                    @* *@
                    @*         </div> *@
                    @* *@
                    @* *@
                    @*     </div> *@
                    @* </div> *@



                    <div class="card-content p-0">
                        <div class="d-flex justify-content-end align-items-center gap-3">
                            <a type="button" class="btn btn-outline" href="@Url.Action("Index")">
                                Hủy
                            </a>
                            <div class="d-flex gap-2">
                                <button onclick="handleSubmit()" type="button" class="btn btn-primary">
                                    Cập nhật sản phẩm
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Column -->
                <div style="display: flex; flex-direction: column; gap: 1.5rem;">
                    <!-- Images -->
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h3 class="card-title m-0">Hình ảnh</h3>
                            <a class="btn btn-outline"
                               href="@Url.Action("EditImages", "Product", new { id = Model.ProductID })">Chi tiết</a>
                        </div>
                        <div class="card-content">
                            <div class="form-group m-0">
                                <label class="form-label">Ảnh chính <span class="text-danger">*</span></label>
                                <div
                                    style="border: 2px dashed var(--border); border-radius: var(--radius); padding: 0.7rem; text-align: center; cursor: pointer;"
                                    onclick="document.getElementById('mainImage').click()">
                                    <input type="file" id="mainImage" name="mainImage" accept="image/*"
                                           style="display: none;" onchange="previewImage(this, 'mainImagePreview')">
                                    <div id="mainImagePreview">
                                        @if (Model.ProductImages.FirstOrDefault(x => x.IsPrimary != null && x.IsPrimary.Value) != null)
                                        {
                                            <img alt="Main Product Image"
                                                 src="@Url.Content("~/Content/img/products/" + Model.ProductImages.FirstOrDefault(x => x.IsPrimary != null && x.IsPrimary.Value)?.ImageUrl)"
                                                 style="width: 100%; border-radius: var(--radius);">
                                        }
                                        else
                                        {
                                            <svg fill="none"
                                                 style="width: 48px; height: 48px; color: var(--muted-foreground); margin: 0 auto 1rem;"
                                                 viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                                <polyline points="21 15 16 10 5 21"></polyline>
                                            </svg>
                                            <p>Click để tải ảnh lên</p>
                                            <p class="text-muted" style="font-size: 12px;">PNG, JPG hoặc WEBP (tối đa
                                                5MB)</p>
                                        }
                                    </div>
                                </div>
                            </div>

                            @* <div class="form-group"> *@
                            @*     <label class="form-label">Ảnh phụ</label> *@
                            @*     <div style="border: 2px dashed var(--border); border-radius: var(--radius); padding: 0.5rem; text-align: center; cursor: pointer;" onclick="document.getElementById('additionalImages').click()"> *@
                            @*         <input type="file" id="additionalImages" name="additionalImages" accept="image/*" multiple="" style="display: none;" onchange="previewMultipleImages(this, 'additionalImagesPreview')"> *@
                            @*         <div id="additionalImagesPreview"> *@
                            @*             @if (Model.ProductImages.FirstOrDefault(x => x.IsPrimary == false) != null) *@
                            @*             { *@
                            @*                 foreach (var img in Model.ProductImages) *@
                            @*                 { *@
                            @*                     <img src="@Url.Content("~/Content/img/products/" + img.ImageUrl)" style="padding-bottom: 5px; width: 100%; height: 80px; object-fit: cover; border-radius: var(--radius);"> *@
                            @*                 } *@
                            @*             } *@
                            @*             else *@
                            @*             { *@
                            @*                 <svg style="width: 32px; height: 32px; color: var(--muted-foreground); margin: 0 auto 0.5rem;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"> *@
                            @*                     <polyline points="16 16 12 12 8 16"></polyline> *@
                            @*                     <line x1="12" y1="12" x2="12" y2="21"></line> *@
                            @*                     <path d="M20.39 18.39A5 5 0 0 0 18 9h-1.26A8 8 0 1 0 3 16.3"></path> *@
                            @*                     <polyline points="16 16 12 12 8 16"></polyline> *@
                            @*                 </svg> *@
                            @*                 <p style="font-size: 12px;">Tải nhiều ảnh (Tối đa 5 ảnh)</p> *@
                            @*             } *@
                            @*              *@
                            @*         </div> *@
                            @*     </div> *@
                            @* </div> *@
                        </div>
                    </div>
                    <!-- Status -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Trạng thái</h3>
                        </div>
                        <div class="card-content">
                            <div class="form-group">
                                <label class="form-label">Trạng thái sản phẩm <span class="text-danger">*</span></label>
                                <select name="IsActive" class="form-control" required="">
                                    @if (Model.IsActive != null && Model.IsActive.Value)
                                    {
                                        <option value="True" selected>Còn hàng</option>
                                        <option value="False">Hết hàng</option>
                                    }
                                    else
                                    {
                                        <option value="True">Còn hàng</option>
                                        <option value="False" selected>Hết hàng</option>
                                    }
                                </select>
                            </div>


                        </div>
                    </div>

                    <!-- Category -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Phân loại</h3>
                        </div>
                        <div class="card-content">
                            <div class="form-group">
                                <label class="form-label">Danh mục <span class="text-danger">*</span></label>
                                <select name="CategoryID" class="form-control" required="">
                                    @foreach (Category i in ViewBag.Categories)
                                    {
                                        <option value="@i.CategoryID"
                                                @(i.CategoryID == Model.CategoryID ? "selected" : "")>@i.CategoryName</option>
                                    }
                                </select>
                            </div>


                        </div>
                    </div>


                </div>
            </div>
        </div>
    }
</div>

@section forms {
    @using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { @class = "display-none", id = "form-delete" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("id", "", new { id = "" })
    }
}

@section Scripts {
    <script src="~/Content/js/Admin/product-admin.js"></script>
    <script>
        setActiveNav('products');

        function handleSubmit() {
            //e.preventDefault();
            if (validateForm('productForm')) {
                showToast('Gửi yêu cầu cập nhật sản phẩm thành công!', 'success');

                const form = document.getElementById('productForm');
                setTimeout(function () {
                    form.submit();
                }, 1500)
            }
        }

        function previewImage(input, previewId) {
            const preview = document.getElementById(previewId);
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.innerHTML = `<img alt="Ảnh" src="${e.target.result}" style="width: 100%; border-radius: var(--radius);">`;
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}

