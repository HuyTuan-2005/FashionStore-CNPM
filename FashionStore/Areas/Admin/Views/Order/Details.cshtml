@model FashionStore.ViewModels.OrderDetailViewModel

@{
  ViewBag.Title = "Chi tiết Đơn hàng";
}

<!-- Breadcrumb -->
<div class="breadcrumb">
  <a href="@Url.Action("Index", "Order")">Dashboard</a>
  <span class="breadcrumb-separator">/</span>
  <a href="@Url.Action("Index", "Order")">Đơn hàng</a>
  <span class="breadcrumb-separator">/</span>
  <span>Chi tiết đơn hàng</span>
</div>

<!-- Content -->
<div class="content-area">
  <div class="d-flex justify-content-between align-items-center mb-6">
    <div class="d-flex align-items-center gap-4">
      <a href="@Url.Action("Index", "Order")" class="btn btn-icon btn-outline">
        <svg style="width: 20px; height: 20px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
      </a>
      <div>
        <h1>Chi tiết Đơn hàng #@Model.Order.OrderID</h1>
        <p class="text-muted mt-1">Ngày đặt: @Model.Order.OrderDate.Value.ToShortDateString()</p>
      </div>
    </div>
    <div class="d-flex gap-2">
      <button class="btn btn-outline" onclick="printPage()">
        <svg style="width: 16px; height: 16px; margin-right: 0.5rem;" viewBox="0 0 24 24" fill="none"
             stroke="currentColor" stroke-width="2">
          <polyline points="6 9 6 2 18 2 18 9"></polyline>
          <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
          <rect x="6" y="14" width="12" height="8"></rect>
        </svg>
        In đơn hàng
      </button>
      <button class="btn btn-primary" onclick="openModal(@Model.Order.OrderID,'statusModal')">Cập nhật trạng thái
      </button>
    </div>
  </div>

  <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 1.5rem;">
    <!-- Left Column -->
    <div style="display: flex; flex-direction: column; gap: 1.5rem;">
      <!-- Status Timeline -->
      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title">Trạng thái đơn hàng</h3>
            <span class="badge @Model.StatusBadgeClass">@Model.StatusDisplayName</span>
          </div>
        </div>
        <div class="card-content">
          <div style="display: flex; flex-direction: column; gap: 1.5rem;">

            @{
              var currentStatus = Model.Order.Status;
              var orderDateStatus = Model.Order.OrderDate.Value;

              // Xác định trạng thái hiện tại (index)
              var statusIndex = 0;
              switch (currentStatus)
              {
                case "Pending": statusIndex = 1; break;
                case "Processing": statusIndex = 2; break;
                case "Shipped": statusIndex = 3; break;
                case "Completed": statusIndex = 4; break;
                case "Cancelled": statusIndex = -1; break;
              }
            }

            <!-- 1. Đơn hàng đã đặt -->
            <div class="d-flex gap-3">
              <div style="display: flex; flex-direction: column; align-items: center;">
                <div
                  style="width: 12px; height: 12px; border-radius: 50%; background: @(statusIndex >= 1 ? "var(--success)" : "var(--border)");"></div>
                @if (statusIndex > 1 || (statusIndex == 1 && currentStatus != "Cancelled"))
                {
                  <div style="width: 2px; height: 48px; background: var(--border);"></div>
                }
              </div>
              <div style="flex: 1;">
                <div class="d-flex justify-content-between">
                  <strong>Đơn hàng đã đặt</strong>
                  <span class="text-muted">@orderDateStatus.ToString("dd/MM/yyyy HH:mm")</span>
                </div>
                <p class="text-muted" style="font-size: 12px; margin-top: 0.25rem;">Đơn hàng được tạo thành công</p>
              </div>
            </div>

            <!-- 2. Đã xác nhận / Chờ xác nhận -->
            @if (statusIndex >= 1 && currentStatus != "Cancelled")
            {
              <div class="d-flex gap-3">
                <div style="display: flex; flex-direction: column; align-items: center;">
                  <div
                    style="width: 12px; height: 12px; border-radius: 50%; background: @(statusIndex >= 2 ? "var(--success)" : currentStatus == "Pending" ? "var(--warning)" : "var(--border)");"></div>
                  @if (statusIndex >= 2)
                  {
                    <div style="width: 2px; height: 48px; background: var(--border);"></div>
                  }
                </div>
                <div style="flex: 1;">
                  <div class="d-flex justify-content-between">
                    <strong>@(currentStatus == "Pending" ? "Chờ xác nhận" : "Đã xác nhận")</strong>
                    <span
                      class="text-muted">@(statusIndex >= 2 ? orderDateStatus.AddMinutes(15).ToString("dd/MM/yyyy HH:mm") : "Đang chờ...")</span>
                  </div>
                  <p class="text-muted" style="font-size: 12px; margin-top: 0.25rem;">
                    @(currentStatus == "Pending" ? "Đơn hàng đang chờ xác nhận" : "Đơn hàng đã được xác nhận")
                  </p>
                </div>
              </div>
            }

            <!-- 3. Đang xử lý -->
            @if (statusIndex >= 2)
            {
              <div class="d-flex gap-3">
                <div style="display: flex; flex-direction: column; align-items: center;">
                  <div
                    style="width: 12px; height: 12px; border-radius: 50%; background: @(statusIndex >= 3 ? "var(--success)" : currentStatus == "Processing" ? "var(--primary)" : "var(--border)");"></div>
                  @if (statusIndex >= 3)
                  {
                    <div style="width: 2px; height: 48px; background: var(--border);"></div>
                  }
                </div>
                <div style="flex: 1;">
                  <div class="d-flex justify-content-between">
                    <strong>Đang xử lý</strong>
                    <span
                      class="text-muted">@(statusIndex >= 3 ? orderDateStatus.AddDays(1).ToString("dd/MM/yyyy HH:mm") : "Đang xử lý...")</span>
                  </div>
                  <p class="text-muted" style="font-size: 12px; margin-top: 0.25rem;">Đang chuẩn bị hàng</p>
                </div>
              </div>
            }

            <!-- 4. Đang giao hàng -->
            @if (statusIndex >= 3)
            {
              <div class="d-flex gap-3">
                <div style="display: flex; flex-direction: column; align-items: center;">
                  <div
                    style="width: 12px; height: 12px; border-radius: 50%; background: @(statusIndex >= 4 ? "var(--success)" : currentStatus == "Shipped" ? "var(--primary)" : "var(--border)");"></div>
                  @if (statusIndex >= 4)
                  {
                    <div style="width: 2px; height: 48px; background: var(--border);"></div>
                  }
                </div>
                <div style="flex: 1;">
                  <div class="d-flex justify-content-between">
                    <strong>Đang giao hàng</strong>
                    <span
                      class="text-muted">@(statusIndex >= 4 ? orderDateStatus.AddDays(1).ToString("dd/MM/yyyy HH:mm") : "Chưa giao...")</span>
                  </div>
                  <p class="text-muted" style="font-size: 12px; margin-top: 0.25rem;">Đơn hàng đã được giao cho đơn vị
                    vận chuyển</p>
                </div>
              </div>
            }

            <!-- 5. Hoàn thành -->
            @if (statusIndex == 4)
            {
              <div class="d-flex gap-3">
                <div style="display: flex; flex-direction: column; align-items: center;">
                  <div style="width: 12px; height: 12px; border-radius: 50%; background: var(--success);"></div>
                </div>
                <div style="flex: 1;">
                  <div class="d-flex justify-content-between">
                    <strong>Hoàn thành</strong>
                    <span class="text-muted">@orderDateStatus.AddDays(1).AddHours(1).ToString("dd/MM/yyyy HH:mm")</span>
                  </div>
                  <p class="text-muted" style="font-size: 12px; margin-top: 0.25rem;">Đơn hàng đã được giao thành
                    công</p>
                </div>
              </div>
            }

            <!-- Trường hợp Đã hủy -->
            @if (currentStatus == "Cancelled")
            {
              <div class="d-flex gap-3">
                <div style="display: flex; flex-direction: column; align-items: center;">
                  <div style="width: 12px; height: 12px; border-radius: 50%; background: var(--destructive);"></div>
                </div>
                <div style="flex: 1;">
                  <div class="d-flex justify-content-between">
                    <strong style="color: var(--destructive);">Đã hủy</strong>
                    <span class="text-muted">@orderDateStatus.AddMinutes(30).ToString("dd/MM/yyyy HH:mm")</span>
                  </div>
                  <p class="text-muted" style="font-size: 12px; margin-top: 0.25rem;">Đơn hàng đã bị hủy</p>
                </div>
              </div>
            }

          </div>
        </div>
      </div>


      <!-- Products -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Sản phẩm</h3>
        </div>
        <div class="card-content" style="padding: 0;">
          <div class="table-container">
            <table class="table m-0">
              <thead>
              <tr>
                <th>Sản phẩm</th>
                <th style="text-align: right;">Đơn giá</th>
                <th style="text-align: center;">Số lượng</th>
                <th style="text-align: right;">Tổng</th>
              </tr>
              </thead>
              <tbody>
              @foreach (var item in Model.Order.OrderDetails)
              {
                var priceAfterDiscount = item.Price * (1 - item.DiscountPercent / 100);
                var itemTotal = priceAfterDiscount * item.Quantity;

                <tr>
                  <td>
                    <div class="d-flex align-items-center gap-3">
                      <img
                        src="@Url.Content("~/Content/img/products/" + item.ProductVariant.Product.ProductImages.FirstOrDefault(x => x.IsPrimary == true).ImageUrl)"
                        alt="@item.ProductVariant.Product.ProductName"
                        style="width: 48px; height: 48px; object-fit: cover; border-radius: var(--radius);">
                      <div>
                        <h6 class="mb-1">@item.ProductVariant.Product.ProductName</h6>
                        <div class="small text-muted">
                          <span>Màu: <strong>@item.ProductVariant.Color.ColorName</strong></span>
                          <span class="mx-2">|</span>
                          <span>Size: <strong>@item.ProductVariant.Size.SizeName</strong></span>
                        </div>
                        @if (item.DiscountPercent > 0)
                        {
                          <span class="badge bg-danger mt-1">-@item.DiscountPercent.Value.ToString("N0")%</span>
                        }
                      </div>
                    </div>
                  </td>
                  <td style="text-align: right;">
                    @if (item.DiscountPercent > 0)
                    {
                      <div class="text-muted text-decoration-line-through small">
                        @item.Price.ToString("N0")₫
                      </div>
                    }
                    @priceAfterDiscount.Value.ToString("N0")₫
                  </td>
                  <td style="text-align: center;">@item.Quantity</td>
                  <td style="text-align: right;">
                    <strong>@itemTotal.Value.ToString("N0")₫</strong>
                  </td>
                </tr>
              }
              </tbody>
            </table>
          </div>

          <!-- Order Summary -->
          <div style="padding: 1.5rem; border-top: 1px solid var(--border);">
            <div style="display: flex; flex-direction: column; gap: 0.5rem;">
              <div class="d-flex justify-content-between text-muted">
                <span>Tạm tính</span>
                <span>@Model.SubTotal.ToString("N0")₫</span>
              </div>
              <div class="d-flex justify-content-between text-muted">
                <span>Phí vận chuyển</span>
                <span>@Model.ShippingFee.ToString("N0")₫</span>
              </div>
              <div class="d-flex justify-content-between text-muted">
                <span>Giảm giá</span>
                <span>-@Model.TotalDiscount.ToString("N0")₫</span>
              </div>
              <div style="height: 1px; background: var(--border); margin: 0.5rem 0;"></div>
              <div class="d-flex justify-content-between">
                <strong>Tổng cộng</strong>
                <strong style="font-size: 18px; color: var(--primary);">
                  @Model.GrandTotal.ToString("N0")₫
                </strong>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Column -->
    <div style="display: flex; flex-direction: column; gap: 1.5rem;">
      <!-- Customer Info -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Thông tin khách hàng</h3>
        </div>
        <div class="card-content">
          <div style="display: flex; flex-direction: column; gap: 1rem;">
            <div class="d-flex align-items-center gap-3">
              <div
                style="width: 40px; height: 40px; border-radius: 50%; background: var(--primary); color: white; display: flex; align-items: center; justify-content: center; font-weight: 500;">
                @Model.Order.FullName[0]
              </div>
              <div>
                <strong>@Model.Order.FullName</strong>
              </div>
            </div>
            <div style="height: 1px; background: var(--border);"></div>
            <div class="d-flex align-items-start gap-3">
              <svg style="width: 16px; height: 16px; color: var(--muted-foreground); margin-top: 2px;"
                   viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
              </svg>
              <div>
                <p class="text-muted" style="font-size: 12px;">Email</p>
                <p>@Model.Order.Customer.Email</p>
              </div>
            </div>
            <div class="d-flex align-items-start gap-3">
              <svg style="width: 16px; height: 16px; color: var(--muted-foreground); margin-top: 2px;"
                   viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path
                  d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
              <div>
                <p class="text-muted" style="font-size: 12px;">Số điện thoại</p>
                <p>@Model.Order.PhoneNumber</p>
              </div>
            </div>
            <div class="d-flex align-items-start gap-3">
              <svg style="width: 16px; height: 16px; color: var(--muted-foreground); margin-top: 2px;"
                   viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              <div>
                <p class="text-muted" style="font-size: 12px;">Địa chỉ giao hàng</p>
                <p>@Model.Order.ShippingAddress</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Payment Info -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Thông tin thanh toán</h3>
        </div>
        <div class="card-content">
          <div style="display: flex; flex-direction: column; gap: 1rem;">
            <div class="d-flex align-items-start gap-3">
              <svg style="width: 16px; height: 16px; color: var(--muted-foreground); margin-top: 2px;"
                   viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                <line x1="1" y1="10" x2="23" y2="10"></line>
              </svg>
              <div>
                <p class="text-muted" style="font-size: 12px;">Phương thức thanh toán</p>
                <strong>@Model.Order.PaymentMethod</strong>
              </div>
            </div>
            <div style="height: 1px; background: var(--border);"></div>
            <div style="background: var(--muted); padding: 0.75rem; border-radius: var(--radius);">
              <p class="text-muted" style="font-size: 12px;">Tổng giá trị đơn hàng</p>
              <p style="font-size: 20px; font-weight: 600; color: var(--primary); margin-top: 0.25rem;">
                @Model.GrandTotal.ToString("N0")₫
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Thao tác nhanh</h3>
        </div>
        <div class="card-content">
          <div style="display: flex; flex-direction: column; gap: 0.5rem;">
            <button class="btn btn-outline w-full" style="justify-content: flex-start;">
              <svg style="width: 16px; height: 16px; margin-right: 0.5rem;" viewBox="0 0 24 24" fill="none"
                   stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
              </svg>
              Gửi email cho khách hàng
            </button>
            <button class="btn btn-outline w-full" style="justify-content: flex-start;">
              <svg style="width: 16px; height: 16px; margin-right: 0.5rem;" viewBox="0 0 24 24" fill="none"
                   stroke="currentColor" stroke-width="2">
                <path
                  d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
              Gọi điện cho khách hàng
            </button>
            <button onclick="confirmDelete(this)" data-id="@Model.Order.OrderID"
                    class="btn btn-outline w-full text-danger"
                    style="justify-content: flex-start; color: var(--destructive);">
              <svg style="width: 16px; height: 16px; margin-right: 0.5rem;" viewBox="0 0 24 24" fill="none"
                   stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="15" y1="9" x2="9" y2="15"></line>
                <line x1="9" y1="9" x2="15" y2="15"></line>
              </svg>
              Hủy đơn hàng
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Status Update Modal -->
<div id="statusModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Cập nhật trạng thái đơn hàng</h3>
      <button class="btn btn-icon" onclick="closeModal('statusModal')"
              style="background: none; border: none; font-size: 24px;">×
      </button>
    </div>
    <div class="modal-body">
      <div class="form-group">
        <label class="form-label">Trạng thái mới</label>
        @Html.DropDownList("status", new SelectList(ViewBag.Status, "StatusValue", "StatusName"), new { @class = "form-control", id = "newStatus" })
      </div>
      <div class="form-group">
        <label class="form-label">Ghi chú (Tùy chọn)</label>
        <textarea disabled class="form-control" placeholder="Nhập ghi chú về thay đổi trạng thái..."></textarea>
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn btn-outline" onclick="closeModal('statusModal')">Hủy</button>
      <button class="btn btn-primary"
              onclick="updateStatus(@Model.Order.OrderID, $('#newStatus').val()); closeModal('statusModal');">
        Cập nhật
      </button>
    </div>
  </div>
</div>

@section forms
{
  @using (Html.BeginForm("EditStatus", "Order", FormMethod.Post, new { @class = "display-none", id = "form-change-status" }))
  {
    @Html.AntiForgeryToken()
    @Html.Hidden("status")
    @Html.Hidden("id")
  }
}

@section scripts
{
  <script src="~/Content/js/Admin/order-admin.js"></script>
  <script>
    setActiveNav('orders');
  </script>
}
