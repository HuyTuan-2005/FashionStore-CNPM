@*them danh muc*@
<div id="addCategoryModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Thêm danh mục mới</h3>
            <button class="btn btn-icon" onclick="closeModal('addCategoryModal')" style="background: none; border: none; font-size: 24px;">×</button>
        </div>
        <div class="modal-body">
            <form id="addCategoryForm">
                <div class="form-group">
                    <label class="form-label">Tên danh mục <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" required="" placeholder="Nhập tên danh mục">
                </div>

                <div class="form-group">
                    <label class="form-label">Danh mục cha <span class="text-danger">*</span></label>
                    <select class="form-control">
                        <option value="">Không có</option>
                        <option>Điện thoại</option>
                        <option>Laptop</option>
                        <option>Tablet</option>
                    </select>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn btn-outline" onclick="closeModal('addCategoryModal')">Hủy</button>
            <button class="btn btn-primary" onclick="if(validateForm('addCategoryForm')) { closeModal('addCategoryModal'); showToast('Đã thêm danh mục thành công'); }">Thêm danh mục</button>
        </div>
    </div>
</div>


@*sua danh muc*@
<div id="editCategoryModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Chỉnh sửa danh mục</h3>
            <button class="btn btn-icon" onclick="closeModal('editCategoryModal')" style="background: none; border: none; font-size: 24px;">×</button>
        </div>
        <div class="modal-body">
            <form id="editCategoryForm">
                <div class="form-group">
                    <label class="form-label">Tên danh mục *</label>
                    <input type="text" class="form-control" value="Điện thoại" required="">
                </div>
                <div class="form-group">
                    <label class="form-label">Slug</label>
                    <input type="text" class="form-control" value="dien-thoai">
                </div>
                <div class="form-group">
                    <label class="form-label">Mô tả</label>
                    <textarea class="form-control">Các sản phẩm điện thoại thông minh</textarea>
                </div>
                <div class="form-group">
                    <label class="form-label">Danh mục cha</label>
                    <select class="form-control">
                        <option value="" selected="">Không có</option>
                        <option>Laptop</option>
                        <option>Tablet</option>
                    </select>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn btn-outline" onclick="closeModal('editCategoryModal')">Hủy</button>
            <button class="btn btn-primary" onclick="if(validateForm('editCategoryForm')) { closeModal('editCategoryModal'); showToast('Đã cập nhật danh mục thành công'); }">Cập nhật</button>
        </div>
    </div>
</div>

