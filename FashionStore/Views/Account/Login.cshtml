@model FashionStore.Models.Customer

@{
    ViewBag.Title = "Đăng nhập";
}
<style>
    body{
        margin: 0;
    }
</style>
<section id="login-form" style="min-height: calc(100vh - 150px); display: flex; align-items: center; justify-content: center;">
    <div class="container-sm">
        <div class="row justify-content-center">
            <div class="col-lg-6" style="font-size: 16px">
                <h2 class="section-title text-uppercase text-center">Đăng nhập</h2>

                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-group flex-wrap" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="col-lg-12 pb-3">
                        @Html.LabelFor(model => model.UserName, "Tài khoản *")
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Nhập tên đăng nhập hoặc email" })
                    </div>
                    <div class="col-lg-12 pb-3">
                        @Html.LabelFor(model => model.PasswordHash, "Mật khẩu *")
                        @Html.TextBoxFor(model => model.PasswordHash, new { @class = "form-control", placeholder = "•••••••••••", type = "password" })
                    </div>
                    <div>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-12">
                        <button type="submit" name="submit" class="btn btn-dark btn-rounded-none btn-lg w-100 text-uppercase fs-6">Đăng nhập
                        </button>
                    </div>
                }

                <div class="py-3 text-center">
                    <a href="@Url.Action("Register", "Account")">Đăng ký tài khoản? </a>
                </div>
            </div>
        </div>
    </div>
</section>
