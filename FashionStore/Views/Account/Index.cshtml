                <div class="mb-3">
                    <label for="City" class="form-label fs-6 text-dark fw-semibold">
                        Tỉnh / Thành phố <span class="text-danger">*</span>
                    </label>

                    @Html.DropDownListFor(
                        model => model.City,
                        new SelectList(Enumerable.Empty<SelectListItem>(), "Value", "Text"),
