                        aria-label="Toggle navigation">
                    <svg class="navbar-icon" width="50" height="50">
                        <use xlink:href="#navbar-icon"></use>
                    </svg>
                </button>
                <div class="offcanvas offcanvas-end" tabindex="-1" id="bdNavbar" aria-labelledby="bdNavbarOffcanvasLabel">
                    <div class="offcanvas-header px-4 pb-0">
                        <a class="navbar-brand text-uppercase m-0 p-0 fs-2" style="font-family: var(--heading-font)"
                           href="@Url.Action("Index", "Product")">
                            URBAN
                        </a>
                        <button type="button" class="btn-close btn-close-black" data-bs-dismiss="offcanvas"
                                aria-label="Close" data-bs-target="#bdNavbar"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul id="navbar"
                            class="navbar-nav text-capitalize justify-content-end align-items-center flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link me-4 active" href="@Url.Action("Index", "Product")">Sản phẩm</a>
                            </li>

                            @Html.Action("DanhMuc", "Product")

                            <li class="nav-item">
                                <div class="user-items">
                                    <ul class="d-flex justify-content-end list-unstyled m-0 p-0 align-items-center">

                                        <li class="nav-item dropdown me-4">
                                            @if (Session["Customer"] == null)
                                            {
                                                <a href="@Url.Action("Login", "Account")" class="user">
                                                    <svg class="search" width="18" height="18">
                                                        <use xlink:href="#user"></use>
                                                    </svg>
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="nav-link dropdown-toggle" href="#" id="dropdownPages"
                                                   role="button" data-bs-toggle="dropdown" aria-haspopup="true"
                                                   aria-expanded="false">
                                                    <svg class="search" width="18" height="18">
                                                        <use xlink:href="#user"></use>
                                                    </svg>
                                                </a>

                                                <ul class="dropdown-menu list-unstyled" aria-labelledby="dropdownPages">
                                                    <li>
                                                        <a class="dropdown-item item-anchor"
                                                           href="@Url.Action("Index", "Account")">
                                                            Thông tin cá nhân
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item item-anchor"
                                                           href="@Url.Action("Index", "Order")">
                                                            Đơn hàng
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item item-anchor"
                                                           href="@Url.Action("Logout", "Account")">
                                                            Đăng xuất
                                                        </a>
                                                    </li>
                                                </ul>
                                            }
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Index", "Cart")" class="cart-icon position-relative">
                                                <svg class="cart" width="18" height="18">
                                                    <use xlink:href="#cart"></use>
                                                </svg>
                                                @if (Session["Cart"] != null && (Session["Cart"] as List<CartItemViewModel>)?.Count > 0)
                                                {
                                                    <span style="font-size: 10px"
                                                          class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                                        @((Session["Cart"] as List<CartItemViewModel>)?.Count)
                                                    </span>
                                                }
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
